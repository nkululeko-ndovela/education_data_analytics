// Summary statistics for key metrics
summary_stats = df.describe()

//  Enrollment trends over the years per department
plt.figure(figsize=(12, 6))
sns.lineplot(data=df, x="Year", y="Enrollment", hue="Department", marker="o")
plt.title("Enrollment Trends Over the Years by Department")
plt.xlabel("Year")
plt.ylabel("Number of Enrollments")
plt.legend(title="Department")
plt.grid(True)
plt.show()

// Funding distribution across departments
plt.figure(figsize=(10, 6))
sns.boxplot(data=df, x="Department", y="Funding Allocation (ZAR)")
plt.title("Funding Allocation Distribution by Department")
plt.xlabel("Department")
plt.ylabel("Funding Allocation (ZAR)")
plt.xticks(rotation=45)
plt.grid(axis="y")
plt.show()

// Correlation heatmap for numeric fields
plt.figure(figsize=(8, 5))
sns.heatmap(df.corr(), annot=True, cmap="coolwarm", fmt=".2f", linewidths=0.5)
plt.title("Correlation Heatmap of Key Metrics")
plt.show()

